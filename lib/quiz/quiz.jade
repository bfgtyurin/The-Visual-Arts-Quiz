extend ../views/layout

block content
  div.row
    div.col-xs-4
    div.col-xs-4
      h1.text-center.quiz-title QUIZ
    div.col-xs-4
   div.row
    div.col-xs-4
    div.col-xs-4
      div
        h5.text-center.answer-field &nbsp;
    div.col-xs-4
  div.row
    div.col-md-3.col-sm-
    div.col-md-6.col-sm-12.center-block
      img().quiz-image.col-height.invisible.img-responsive.center-block
      div.progress.vert-offset-top-1.invisible
        div.progress-bar.progress-bar-striped(role='progressbar' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100' style='width: 0%')
        span.sr-only45
      select.center-block.quiz-select
        option(value="5") 5
        option(value="10") 10
        option(value="25") 25
        option(value="") all
    div.col-md-3.col-sm-
  div.row
    div.col-xs-4
    div.col-xs-4.text-center.vert-offset-top-1
      div.btn-group(role='group')
        button.btn.btn-default.btn-offset.show-button.hidden(type.button) Show answer
        button.btn.btn-danger.btn-offset.no-button.hidden(type.button) No&nbsp;
        button.btn.btn-success.btn-offset.yes-button.hidden(type.button) Yes
        button.btn.btn-default.btn-offset.button-start(type.button) Start
    div.col-xs-4
